{{!-- views/login.hbs --}}
<style>
 .login {
  height: calc(100vh - 50px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(
      rgba(255, 255, 255, 0.5),
      rgba(255, 255, 255, 0.5)
    ),
    url("https://th.bing.com/th/id/OIP.hzbPz7V0bDuwtK3CCYsCxQHaEK?w=333&h=187&c=7&r=0&o=5&dpr=1.3&pid=1.7");
  background-size: cover;
}

.loginTitle {
  font-size: 50px;
}

.loginForm {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
}

.loginForm > label {
  margin: 10px 0;
}

.loginInput {
  padding: 10px;
  background-color: white;
  border: none;
}

.loginButton {
  margin-top: 20px;
  cursor: pointer;
  background-color: lightcoral;
  border: none;
  color: white;
  border-radius: 10px;
  padding: 10px;
}

.loginButton:disabled{
  cursor: not-allowed;
  background-color: rgb(252, 173, 173);
}

}
</style>

<div class="login">
  <span class="loginTitle">Login</span>
  <form class="loginForm"  action="/auth/login" method="post">
    <label for="username">Username:</label>
    <input class="loginInput" type="text" name="username" placeholder="Enter your username..." />
    <label>Password</label>
    <input class="loginInput" type="password" name="password" placeholder="Enter your password..." />
    <button class="loginButton">Login</button>
  </form>
</div>